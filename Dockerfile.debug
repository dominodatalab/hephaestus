# hadolint global ignore=DL3008
FROM golang:1.25-alpine AS build
ARG VERSION="dev"
WORKDIR /app
COPY go.mod .
COPY go.sum .
RUN go mod download
COPY cmd ./cmd
COPY pkg ./pkg
COPY deployments/crds ./deployments/crds
ENV CGO_ENABLED=0 GOOS=linux
RUN go build -ldflags="-X 'main.Version=${VERSION}'" -o hephaestus-controller ./cmd/controller


FROM ubuntu:noble
ARG USERNAME=lala
ARG USER_UID=1001
ARG USER_GID=$USER_UID
RUN apt-get update \
  && apt-get install --no-install-recommends --yes \
    bash \
    bind9-host \
    coreutils \
    curl \
    dnsutils \
    gnupg2 \
    grep \
    httpie \
    influxdb-client \
    iputils-ping \
    jq \
    kafkacat \
    locales \
    mysql-client \
    nano \
    net-tools \
    netcat-openbsd \
    ngrep \
    nmap \
    openssh-client \
    p7zip-full \
    postgresql-client \
    python3-pip \
    python3-setuptools \
    redis-tools \
    swaks \
    tcpdump \
    telnet \
    vim \
    wget \
    xz-utils \
  && rm -rf /var/lib/apt/lists/* \
  && groupadd --gid $USER_GID $USERNAME \
  && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME


WORKDIR /
COPY . /src
COPY --from=build /app/hephaestus-controller /usr/bin/
RUN chown -R 1001:1001 /src /opt && chown -R 1001:1001 /usr/bin/hephaestus-controller
USER lala

ENTRYPOINT ["/usr/bin/hephaestus-controller"]
